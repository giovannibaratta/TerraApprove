{
  // Configurations generated by `yarn dlx @yarnpkg/sdks vscode` to
  // make pnp work with vscode (see https://yarnpkg.com/getting-started/editor-sdks#vscode)
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "eslint.nodePath": "core/.yarn/sdks",
  "prettier.prettierPath": "core/.yarn/sdks/prettier/index.js",
  "typescript.tsdk": "core/.yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "jest.jestCommandLine": "yarn test",
  "jest.rootPath": "core"
}
