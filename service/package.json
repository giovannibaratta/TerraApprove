{
  "scripts": {
    "start": "dotenv -e .env.local -- nest start",
    "start:dev": "dotenv -e .env.local -- nest start --watch --debug",
    "deps:start": "docker-compose -f dev-external-deps/docker-compose.yaml --profile dev up -d --wait",
    "deps:start:test": "docker-compose -f dev-external-deps/docker-compose.yaml --profile test up -d --wait",
    "deps:stop": "docker-compose -f dev-external-deps/docker-compose.yaml --profile dev --profile test stop",
    "deps:down": "docker-compose -f dev-external-deps/docker-compose.yaml --profile dev --profile test down",
    "deps:rebuild": "docker-compose -f dev-external-deps/docker-compose.yaml --profile dev up -d --build",
    "deps:update-schema": "yarn deps:start && yarn prisma:pull && yarn prisma:generate",
    "db:migrate": "yarn deps:start && yarn liquibase:update:dev",
    "liquibase:update:dev": "docker run --network host --rm -v ./db-migrations:/liquibase/changelog liquibase/liquibase --defaultsFile=/liquibase/changelog/liquibase.docker.properties update",
    "liquibase:update:test": "docker run --network host --rm -v ./db-migrations:/liquibase/changelog liquibase/liquibase --defaultsFile=/liquibase/changelog/integration-test.liquibase.docker.properties update",
    "lint": "yarn eslint --cache --fix .",
    "format:prettier": "yarn prettier --config .prettierrc . --write",
    "compile": "nest build",
    "prisma:pull": "yarn prisma db pull",
    "prisma:generate": "yarn prisma generate",
    "openapi": "yarn openapi-typescript openapi/terraapprove.yaml -o generated/interfaces/terraapprove-apis/apis.ts --immutable-types",
    "generate:interfaces": "yarn openapi && yarn prisma:generate",
    "test:setup": "yarn deps:start:test && yarn prisma:generate && yarn liquibase:update:test",
    "test": "yarn test:setup && yarn dotenv -e .env.test -- yarn jest {libs/**/*.test.ts,main/**/*.test.ts}",
    "test:single": "yarn test:setup && yarn dotenv -e .env.test -- yarn jest "
  },
  "name": "terraapprove-backend",
  "version": "0.0.1",
  "repository": "https://github.com/giovannibaratta/TerraApprove",
  "author": "Giovanni Baratta",
  "license": "MIT",
  "engines": {
    "node": "18"
  },
  "packageManager": "yarn@4.0.2",
  "dependencies": {
    "@nestjs/common": "10.2.8",
    "@nestjs/core": "10.2.8",
    "@nestjs/platform-express": "10.3.1",
    "@prisma/client": "5.9.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "express": "4.18.2",
    "fp-ts": "2.16.2",
    "kafkajs": "2.2.4",
    "reflect-metadata": "0.2.1",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.0",
    "@nestjs/schematics": "10.1.0",
    "@nestjs/testing": "10.2.8",
    "@types/chance": "1.1.6",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.8",
    "@types/node": "18.18.9",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "chance": "1.1.11",
    "dotenv-cli": "7.3.0",
    "eslint": "8.53.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "expect-more-jest": "5.5.0",
    "jest": "29.7.0",
    "openapi-typescript": "6.7.4",
    "prettier": "2.8.8",
    "prisma": "5.9.0",
    "supertest": "6.3.4",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
