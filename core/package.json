{
  "scripts": {
    "start": "nest start --",
    "start:dev": "nest start --watch --",
    "lint": "yarn eslint --cache --fix .",
    "format:prettier": "yarn prettier --config .prettierrc . --write",
    "compile": "nest build",
    "test": "yarn jest {libs/**/*.test.ts,main/**/*.test.ts}",
    "test:e2e": "yarn generate:artifacts && cp ../artifacts/terraapprove-alpine ../e2e-tests/terraapprove && ../e2e-tests/run-e2e-tests.sh",
    "test:e2e:no-build": "../e2e-tests/run-e2e-tests.sh",
    "test:coverage": "yarn test --coverage",
    "prepush-validation": "yarn lint && yarn compile && yarn test",
    "generate:artifacts": "(rm ../artifacts/terraapprove 2>/dev/null || true) && yarn pkg --targets node18-linux,node18-alpine --output ../artifacts/terraapprove --compress GZip ./build/main/src/main.js"
  },
  "name": "terraapprove",
  "version": "0.0.7",
  "repository": "https://github.com/giovannibaratta/TerraApprove",
  "author": "Giovanni Baratta",
  "license": "MIT",
  "engines": {
    "node": "18"
  },
  "packageManager": "yarn@3.6.1",
  "dependencies": {
    "@nestjs/common": "10.2.8",
    "@nestjs/core": "10.2.8",
    "ajv": "8.12.0",
    "fp-ts": "2.16.1",
    "jsonrepair": "3.4.0",
    "nest-commander": "3.12.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "yaml": "2.3.4"
  },
  "devDependencies": {
    "@nestjs/cli": "10.2.1",
    "@nestjs/schematics": "10.0.3",
    "@nestjs/testing": "10.2.8",
    "@types/chance": "1.1.6",
    "@types/inquirer": "9.0.7",
    "@types/jest": "29.5.8",
    "@types/node": "18.18.9",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "chance": "1.1.11",
    "eslint": "8.53.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "expect-more-jest": "5.5.0",
    "jest": "29.7.0",
    "memfs": "4.6.0",
    "pkg": "5.8.1",
    "prettier": "2.8.8",
    "source-map-support": "0.5.21",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
